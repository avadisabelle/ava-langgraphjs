{
  "name": "ava-langgraph-prompt-decomposition-engine",
  "version": "0.1.1",
  "description": "Prompt Decomposition Engine for LangGraph.js - Graph-level orchestration of Four Directions analysis, three-universe perspective processing, and ceremony gating",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./graphs": {
      "types": "./dist/graphs/index.d.ts",
      "import": "./dist/graphs/index.js",
      "require": "./dist/graphs/index.cjs"
    },
    "./nodes": {
      "types": "./dist/nodes/index.d.ts",
      "import": "./dist/nodes/index.js",
      "require": "./dist/nodes/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avadisabelle/ava-langgraphjs.git",
    "directory": "libs/prompt-decomposition-engine"
  },
  "keywords": [
    "langgraph",
    "prompt",
    "decomposition",
    "pde",
    "medicine-wheel",
    "four-directions",
    "three-universe",
    "ceremony",
    "graph"
  ],
  "author": "ava",
  "license": "MIT",
  "dependencies": {
    "ava-langchain-prompt-decomposition": "^0.1.1",
    "uuid": "^10.0.0"
  },
  "peerDependencies": {
    "ava-langchain-relational-intelligence": ">=0.1.0",
    "ava-langgraph-narrative-intelligence": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "ava-langgraph-narrative-intelligence": {
      "optional": true
    },
    "ava-langchain-relational-intelligence": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
